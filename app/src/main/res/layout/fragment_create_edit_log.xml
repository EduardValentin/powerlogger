<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.powerlogger.utils.BasicConverters" />

        <variable
            name="viewmodel"
            type="com.example.powerlogger.ui.logger.CreateOrEditLogViewModel" />

        <variable
            name="view"
            type="com.example.powerlogger.ui.logger.CreateOrEditLogFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.logger.CreateOrEditLogFragment">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/exerciseControls"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/exercisesSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="32dp" />

                    <Button
                        android:id="@+id/addExerciseButton"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#00FFFFFF"
                        android:elevation="1dp"
                        android:padding="10dp"
                        android:text="@string/add_new_exercise"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_add_black_24dp" />

                </LinearLayout>


                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/addNewExerciseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:el_duration="500"
                    app:el_expanded="false"
                    app:el_parallax="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exerciseControls">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/exerciseName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:autofillHints=""
                            android:ems="10"
                            android:text="@={viewmodel.exerciseDTO.name}"
                            android:hint="@string/exercise_name_placeholder"
                            android:inputType="textPersonName" />

                        <Spinner
                            android:id="@+id/exerciseGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:minHeight="32dp" />

                        <Spinner
                            android:id="@+id/exerciseType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:minHeight="32dp" />
                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

                <EditText
                    android:id="@+id/logIntensity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:text="@={BasicConverters.fromIntegerToString(viewmodel.logDTO.minutes)}"
                    android:hint="@string/minutes"
                    android:inputType="numberSigned"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addNewExerciseLayout" />

                <Button
                    android:id="@+id/confirmAddLog"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="128dp"
                    android:layout_marginBottom="60dp"
                    android:width="200dp"
                    android:text="@string/add_log"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logNotes" />

                <EditText
                    android:id="@+id/logNotes"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/notes"
                    android:text="@={viewmodel.logDTO.notes}"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logIntensity" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>